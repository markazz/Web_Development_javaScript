// CHECKING BROWSER SUPPORT FOR 
// localStorage and sessionStorage

// METHOD: 1 
// Referenced: mozilla.developer.n/w

// function to test whether the browser supports storage 
//  and if supports is it available ????


//  define the function 
function storageAvailable(type) 
{
		// using try catch
		try 
			{
			// storge 2 items in a variable called storage
				var storage = window[type], ='____storage test ____';

				//  store the item 
				storage.setItem(x,x);
				
				//  remove the item 
				storage.removeItem(x);
				
					return true;
			} 
	catch(e) 
			{


				return false;
				// console.log(e);
			}
}// storageAvailable closes



//  use or call the function 
if(storageAvailable('sessionStorage')) 
	{
		// we can use the sesssionStorage 
	}
else 
	{
	//  nope we can not use the session Storage 
	}






